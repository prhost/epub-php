{
  "name": "prhost/epub3-php",
  "description": "Epub v3",
  "keywords": [
    "php",
    "epub3-php"
  ],
  "homepage": "https://github.com/prhost/epub3-php",
  "license": "MIT",
  "authors": [
    {
      "name": "Kallef Alexandre",
      "email": "kallef@orbitaldev.com.br",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Prhost\\Epub3\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Prhost\\Epub3\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
